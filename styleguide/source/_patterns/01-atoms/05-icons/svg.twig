{#
NOTE: If what this template does is calls the function, it would be better to call the function in parent templates.

{{ icon(icon) }}
#}


{% set assetsPath = url.assetsPath %}
{% set iconPath = '/' ~ assetsPath ~ '/images/icon-' ~ icon ~ '.svg#icon-' ~ icon %}

<svg aria-hidden="true">
  <use xlink:href="{{ iconPath }}"></use>
</svg>


